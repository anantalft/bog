<h1>Boggles</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Board</th>
    <th>Row</th>
    <th>Col</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @boggles.each do |boggle| %>
    <tr>
      <td><%= boggle.name %></td>
      <td><%= boggle.board %></td>
      <td><%= boggle.row %></td>
      <td><%= boggle.col %></td>
      <td><%= link_to 'Show', boggle %></td>
      <td><%= link_to 'Edit', edit_boggle_path(boggle) %></td>
      <td><%= link_to 'Destroy', boggle, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
